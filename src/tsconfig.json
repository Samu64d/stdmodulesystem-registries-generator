{
	"compilerOptions": {
		"allowSyntheticDefaultImports": false,
		"baseUrl": "./",
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"outDir": "../dist",
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"target": "ESNext"
	},
	"include": [
		"./scripts"
	]
}
